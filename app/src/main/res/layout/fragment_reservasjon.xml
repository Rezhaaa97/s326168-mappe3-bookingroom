<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.NewReservationFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".NyRestaurantAktivitet">

        <EditText
            android:id="@+id/firstname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="25dp"
            android:hint="Fornavn"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/lastname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="15dp"
            android:layout_below="@id/firstname"
            android:hint="Etternavn"
            android:textSize="20sp" />


        <Spinner
            android:id="@+id/room"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/lastname"
            android:popupBackground="@color/white"
            android:layout_marginBottom="15dp"
            android:textSize="20sp" />


        <Button
            android:id="@+id/date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/room"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="15dp"
            android:background="#FFFFFF"
            android:text="Dato for booking"
            android:textAlignment="textStart"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/time_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/date"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="15dp"
            android:background="#FFFFFF"
            android:backgroundTint="#FFFFFF"
            android:text="Tid "
            android:textSize="20sp" />


            <RadioGroup

                android:id="@+id/radio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/time_label"
                android:orientation="vertical">


                <RadioButton
                    android:id="@+id/time1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:text="08:30 - 10:30"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <RadioButton
                    android:id="@+id/time2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:text="10:30 - 12:15"
                    android:textSize="16sp"
                    android:textStyle="bold" />




                <RadioButton
                    android:id="@+id/time3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:text="12:30 - 14:15"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <RadioButton
                    android:id="@+id/time4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:text="14:30 - 16:15"
                    android:textSize="16sp"
                    android:textStyle="bold" />



            </RadioGroup>


        <Button
            android:id="@+id/reserver_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/radio"
            android:layout_marginTop="15dp"
            android:backgroundTint="@color/colorPrimary"
            android:text="RESERVER"
            android:textColor="@color/black"
            android:textSize="20sp"

            />
    </RelativeLayout>

</FrameLayout>